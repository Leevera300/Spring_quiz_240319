<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.quiz.lesson06.mapper.UrlMapper">
 	<insert id="insertUrl" parameterType="map">
 		INSERT INTO `url`
 		(
			`name`
			, `url`
			, `createdAt`
			, `updatedAt`
 		)
 		VALUES
 		(
 			#{name}
 			, #{url}
 			, NOW()
 			, NOW()
 		)
 	</insert>
 	
 	<select id="selectUrlList" resultType="com.quiz.lesson06.domain.Url">
 		SELECT
 			`id`
			, `name`
			, `url`
			, `createdAt`
			, `updatedAt`
		FROM
			`url`
 	</select>
 	
 	<select id="selectUrlListByUrl" parameterType="string" resultType="com.quiz.lesson06.domain.Url">
 		SELECT
 			`id`
			, `name`
			, `url`
			, `createdAt`
			, `updatedAt`
		FROM
			`url`
		WHERE
			`url` = #{url}
 	</select>
 	
 	<delete id="deleteUrlById" parameterType="int">
 		DELETE FROM
 			`url`
 		WHERE
 			`id` = #{id}
 	</delete>
 </mapper>